@using CSharks.DAL.Entities;
@model List<QuizScoreVM>
@{
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<h1>Quiz Scores</h1>
<a class="modal-open btn btn-success" asp-action="AddEdit" asp-controller="QuizScore">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Score</th>
            <th>User Id</th>
            <th>Question</th>
            <th>Question Answer</th>
            <th>Quiz type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Id</strong></td>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Score</strong></td>
                <td>@item.UserId</td>
                <td>@item.Question.Text</td>
                <td>@item.QuestionAnswer.Text</td>
                <td>@item.QuizType.Title</td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu" style="">
                            <a asp-action="AddEdit" asp-route-id="@item.Id" asp-route-culture="@CultureType.en" asp-controller="QuizScore" class="modal-open dropdown-item"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="QuizScore" class="modal-open dropdown-item"><i class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>