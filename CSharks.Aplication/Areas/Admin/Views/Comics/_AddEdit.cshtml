@using CSharks.BLL.ViewModels;
@using CSharks.DAL.Entities;
@model ComicsVM
@{
    var actionText = Model.Id == 0 ? "Add" : "Edit";
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">@actionText</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form method="post" asp-action="AddEdit" asp-controller="Comics" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="modal-body">
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" placeholder="Enter title" asp-for="Name"/>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" aria-label="Enter Description" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="ImageFile" class="form-label">ImageFile</label>
                    <input type="file" class="form-control" placeholder="Enter Image" name="fileName"/>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="Price"/>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Discount" class="form-label">Discount</label>
                    <input class="form-control" asp-for="Discount"/>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="NewPrice" class="form-label">New Price</label>
                    <input class="form-control" asp-for="NewPrice" />
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label asp-for="DateOfPublication" class="form-label">Date Of Publication</label>
                    <input class="form-control" asp-for="DateOfPublication"/>
                </div>
            </div>
            <input asp-for="CultureType" hidden />
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>