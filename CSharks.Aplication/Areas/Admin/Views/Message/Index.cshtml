@model List<MessageVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<h1>Messages</h1>
<a asp-action="AddEdit" asp-controller="Message" class="modal-open btn btn-success">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>User Name</th>
            <th>Text</th>
            <th>When</th>
            <th>User Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.Id</strong></td>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.UserName</strong></td>
                <td>@item.Text</td>
                <td><span class="badge bg-label-primary me-1">@item.When</span></td>
                <td>@item.UserId</td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu" style="">
                            <a asp-action="AddEdit" asp-route-id="@item.Id" asp-controller="Message" class="modal-open dropdown-item"><i class="bx bx-edit-alt me-1"></i>Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Message" class="modal-open dropdown-item"><i class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

