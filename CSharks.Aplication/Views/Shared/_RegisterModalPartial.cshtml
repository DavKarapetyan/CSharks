@using CSharks.DAL.Enums;
@model RegisterVM

<div class="modal fade" id="signupModal" tabindex="1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-transparent">
            <div class="modal-body">
                <div class="account-area">
                    <h3 class="title mb-4">@Localizer["GetStarted"]</h3>
                    <div class="text-center mt-4">
                        <a asp-area="Admin" asp-controller="Account" asp-action="GoogleLogin" class="google-btn mt-4 mb-3">
                            <img src="~/assets/images/icon/google.png" alt="image">@Localizer["SignGoogle"]
                        </a>
                    </div>
                    <div class="or-devider mt-4"><span>@Localizer["OR"]</span></div>
                    <p class="text-center mt-2 mb-4">@Localizer["SignEmail"]</p>
                    <form class="account-form" method="post" asp-area="Admin" asp-controller="Account" asp-action="Register">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">@Localizer["YourEmail"] </label>
                            <input asp-for="Email" placeholder="@Localizer["YourEmail"]" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="DOB" class="form-label">@Localizer["DOB"]</label>
                            <input asp-for="DOB" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">@Localizer["YourPassword"] </label>
                            <input asp-for="Password" placeholder="@Localizer["YourPassword"]" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm" class="form-label">@Localizer["ConfirmPassword"] </label>
                            <input asp-for="PasswordConfirm" placeholder="@Localizer["ConfirmPassword"]" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NickName" class="form-label">@Localizer["NickName"]</label>
                            <input asp-for="NickName" class="form-control" placeholder="@Localizer["NickName"]" />
                        </div>
                        <div class="form-group">
                            @foreach(var item in Enum.GetValues(typeof(Avatar)))
                            {
                                <input asp-for="Avatar" type="radio" id="radiobtn4" class="Send_data" value="@item" />
                                <label for="radiobtn4">
                                    <img src="@($"/Avatars/{item}.png")" class="img-fluid" style="max-width:50px;" />
                                </label>
                            }
                        </div>
                        <div class="text-center">
                            <button type="submit" class="cmn-btn">@Localizer["SignUp"]</button>
                        </div>
                    </form>
                    <p class="text-center mt-3">
                        @Localizer["HaveAccount?"]<a href="#0" data-dismiss="modal" data-toggle="modal"
                                                   data-target="#loginModal">@Localizer["SignIn"]</a>
                    </p>
                </div><!-- account-area end -->
            </div>
        </div>
    </div>
</div>
