@using CSharks.DAL.Enums;
@model RegisterVM

<div class="modal fade bd-example-modal-lg" id="signupModal" tabindex="1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-transparent">
            <div class="modal-body">
                <div class="account-area">
                    <h3 class="title mb-4 text-anim-2">@Localizer["GetStarted"]</h3>
                    <form class="account-form" method="post" asp-area="Admin" asp-controller="Account" asp-action="Register">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">@Localizer["YourEmail"] </label>
                            <input asp-for="Email" placeholder="@Localizer["YourEmail"]" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="DOB" class="form-label">@Localizer["DOB"]</label>
                            <input asp-for="DOB" style="  color-scheme: dark;
" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">@Localizer["YourPassword"] </label>
                            <input asp-for="Password" placeholder="@Localizer["YourPassword"]" class="form-control" id="password" />

                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm" class="form-label">@Localizer["ConfirmPassword"] </label>
                            <input asp-for="PasswordConfirm" placeholder="@Localizer["ConfirmPassword"]" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NickName" class="form-label">@Localizer["NickName"]</label>
                            <input asp-for="NickName" class="form-control" placeholder="@Localizer["NickName"]" />
                        </div>
                        <div class="form-group">
                            @foreach (var item in Enum.GetValues(typeof(Avatar)))
                            {
                                <input asp-for="Avatar" type="radio" id="radiobtn4" class="Send_data" value="@item" />
                                <label for="radiobtn4">
                                    <img src="@($"/Avatars/{item}.png")" class="img-fluid" style="max-width:50px;" />
                                </label>
                            }
                        </div>
                        <div class="text-center">
                            <button type="submit" class="account__btn">@Localizer["SignUp"]</button>
                        </div>
                    </form>
                    <span class="text-center" style="margin-left:47%; color: #535388;
font-family: Josefin Sans;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: 150%; /* 30px */
letter-spacing: 0.4px;">@Localizer["OR"]</span>
                    <div class="text-center mt-4">
                        <a asp-area="Admin" asp-controller="Account" asp-action="GoogleLogin" class="google-btn mb-3">
                            <img src="~/assets/images/icon/google.png" alt="image">
                            @Localizer["SignGoogle"]
                        </a>
                        
                    </div>
                    <p class="text-center mt-3">
                        @Localizer["HaveAccount?"]<a href="#0" data-dismiss="modal" data-toggle="modal"
                                                     data-target="#loginModal">@Localizer["SignIn"]</a>
                    </p>
                </div><!-- account-area end -->
            </div>
        </div>
    </div>
</div>

