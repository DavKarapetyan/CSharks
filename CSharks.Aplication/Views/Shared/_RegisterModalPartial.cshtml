@using CSharks.DAL.Enums;
@model RegisterVM

<div class="modal fade" id="signupModal" tabindex="1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content bg-transparent">
            <div class="modal-body">
                <div class="account-area">
                    <h3 class="title mb-4">Let's get started</h3>
                    <div class="text-center mt-4">
                        <a asp-area="Admin" asp-controller="Account" asp-action="GoogleLogin" class="google-btn mt-4 mb-3">
                            <img src="~/assets/images/icon/google.png" alt="image">Sign Up
                            with Google
                        </a>
                    </div>
                    <div class="or-devider mt-4"><span>OR</span></div>
                    <p class="text-center mt-2 mb-4">Sign up with your work email</p>
                    <form class="account-form" method="post" asp-area="Admin" asp-controller="Account" asp-action="Register">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Your Email </label>
                            <input asp-for="Email" placeholder="Enter Your Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="DOB" class="form-label">Date of Birth</label>
                            <input asp-for="DOB" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Your Password </label>
                            <input asp-for="Password" placeholder="Your Password" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm" class="form-label">Confirm Password </label>
                            <input asp-for="PasswordConfirm" placeholder="Confirm your Password" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="NickName" class="form-label">Your Nick Name</label>
                            <input asp-for="NickName" class="form-control" placeholder="Your Nick Name"/>
                        </div>
                        <div class="form-group">
                            @foreach(var item in Enum.GetValues(typeof(Avatar)))
                            {
                                <input asp-for="Avatar" type="radio" id="radiobtn4" class="Send_data" value="@item" />
                                <label for="radiobtn4">
                                    <img src="@($"/Avatars/{item}.png")" class="img-fluid" style="max-width:50px;" />
                                </label>
                            }
                        </div>
                        <div class="text-center">
                            <button type="submit" class="cmn-btn">Sign Up</button>
                        </div>
                    </form>
                    <p class="text-center mt-3">
                        Already have an account?<a href="#0" data-dismiss="modal" data-toggle="modal"
                                                   data-target="#loginModal">Sign In</a>
                    </p>
                </div><!-- account-area end -->
            </div>
        </div>
    </div>
</div>
