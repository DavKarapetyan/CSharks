@model CommentAddEditVM
<form asp-action="AddComment" asp-controller="News" class="contact-form">
    <input hidden asp-for="NewsId" />
    <div class="row pt-3">
        <div class="col-md-6">
            <label asp-for="Name">Your Name</label>
            <input asp-for="Name" type="text" class="form-control style--two" placeholder="Your Name">
        </div>
        <div class="col-md-6">
            <label asp-for="Email">Your Email</label>
            <input asp-for="Email" type="text" class="form-control style--two" placeholder="Your Email">
        </div>
    </div>
    <div class="row pt-3">
        <div class="col">
            <label asp-for="CommentText">Your Comment Text</label>
            <textarea asp-for="CommentText" class="form-control style--two" placeholder="Your Comment"></textarea>
        </div>
    </div>
    <button type="submit" class="submit-btn mt-3">Post Comment</button>
</form>