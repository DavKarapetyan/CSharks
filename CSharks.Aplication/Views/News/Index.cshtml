@using CSharks.DAL.Enums;
@model List<NewsVM>
<section class="inner-hero bg_img" data-background="/assets/images/bg/inner-hero.jpg">
    <div class="shape position-absolute"><img src="~/assets/images/elements/inner-hero/shape.png" alt="image"></div>

    <div class="el-1 position-absolute"><img src="~/assets/images/elements/inner-hero/el-1.png" alt="image"></div>
    <div class="el-2 position-absolute"><img src="~/assets/images/elements/inner-hero/el-2.png" alt="image"></div>
    <div class="el-3 position-absolute"><img src="~/assets/images/elements/inner-hero/el-3.png" alt="image"></div>
    <div class="el-4 position-absolute"><img src="~/assets/images/elements/inner-hero/el-4.png" alt="image"></div>
    <div class="el-5 position-absolute"><img src="~/assets/images/elements/inner-hero/el-5.png" alt="image"></div>
    <div class="el-6 position-absolute"><img src="~/assets/images/elements/inner-hero/el-6.png" alt="image"></div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-title text-anim">@Localizer["Text1"]</h2>
            </div>
        </div>
    </div>
</section>
<!-- inner-hero end -->
<!-- News section start -->
<section class="pt-120 pb-120">
    <div class="container">
        <div class="row mb-none-40">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="post-card style--two mb-40">
                        <div class="post-card__thumb">
                            <img src="@item.ImageFile" alt="image">
                        </div>
                        <div class="post-card__content">
                            <h3 class="post-card__title mb-3"><a asp-action="NewsSingle" asp-controller="News" asp-route-id="@item.Id">@item.Title</a></h3>
                            <p>@(item.Description.Count() > 150 ? item.Description.Remove(50) : item.Description)...</p>
                        </div>
                    </div>
                }

            </div>
            <div class="col-lg-4 mt-lg-0 mt-5">
                <div class="sidebar">
                    <div class="widget">
                        <h3 class="widget__title">@Localizer["Text2"]</h3>
                        <form class="widget__search" method="get">
                            <input type="search" name="text" placeholder="@Localizer["Text3"]" class="form-control">
                            <button type="submit"><i class="fas fa-search"></i> @Localizer["Text4"]</button>
                        </form>
                    </div><!-- widget end -->
                    <div class="widget">
                        <h3 class="widget__title">@Localizer["Text5"]</h3>
                        <br />
                        <div class="small-post-slider">
                            @foreach (var item in Model)
                            {
                                <div class="post-item">
                                    <div class="post-item__thumb"><img src="@item.ImageFile" alt="image"></div>
                                    <div class="post-item__content">
                                        <h3><a asp-action="NewsSingle" asp-controller="News" asp-route-id="@item.Id">@item.Title</a></h3>
                                    </div>
                                </div>
                            }
                        </div><!-- small-post-slider end -->
                    </div><!-- widget end -->
                    <div class="widget">
                        <h3 class="widget__title">@Localizer["Text6"]</h3>
                        <ul class="social-links">
                            <li><a href="#0"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#0"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="#0"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="#0"><i class="fab fa-pinterest-p"></i></a></li>
                            <li><a href="#0"><i class="fab fa-google-plus-g"></i></a></li>
                        </ul>
                    </div><!-- widget end -->
                    <div class="widget">
                        <h3 class="widget__title">@Localizer["Text7"]</h3>
                        <div class="tags-list">
                            <form asp-action="Index" asp-controller="News" method="get">
                                <button value="@NewsType.Game" name="newsType" onclick="this.form.submit();">
                                    @Localizer["Text8"]
                                </button>
                                <button value="@NewsType.Quiz" name="newsType" onclick="this.form.submit();">
                                    @Localizer["Text9"]
                                </button>
                                <button value="@NewsType.Comics" name="newsType" onclick="this.form.submit();">
                                    @Localizer["Text10"]
                                </button>
                                <button value="@NewsType.MediaLiteracy" name="newsType" onclick="this.form.submit();">
                                    @Localizer["Text11"]
                                </button>
                                <button value="@NewsType.AboutTeam" name="newsType" onclick="this.form.submit();">
                                    @Localizer["Text12"]
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- News section end -->