@model List<QuizTypeVM>

<div class="container" style="margin-top:150px;">
    <h2 style="text-align:center;" class="text-anim">@Localizer["Text1"]</h2>
    @foreach (var item in Model)
    {
        <a asp-action="GetQuestions" asp-route-quizTypeId="@item.Id"  asp-route-QuizType="@item.Title" class="submit-btn mt-5 btn" style="color:white;">@item.Title</a>
       }
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="~/assets/js/quiz.js"></script>