<div class="question container">
    <div class="row align-items-center justify-content-between">
        <div class="col-lg-3">
            <img src="@Model.QuestionImage" class="img-fluid" />
        </div>
        <div class="col-lg-9">
            <p>@Model.Text</p>
        </div>
    </div>
</div>
<div class="row mt-3">
    <h1 hidden id="explan" data-text="@Model.Explanation">@Model.Explanation</h1>
    @foreach (var item in Model.Answers)
    {
        <div class="col-lg-3 mt-2">
            <div class="answer" onclick="check('@item.Id', '@Model.Id', this)">
                <p class="text-center">@item.Text</p>
            </div>
        </div>
    }
</div>
<div class="d-flex mt-3">
    <div class="ml-auto">
        <button class="primary__btn" onclick="goToNext()">Next</button>
        <p class="space__text">or space</p>
    </div>
</div>
<script>
    $(window).keypress(function (e) {
        if (e.which === 32) {
            e.preventDefault();
            goToNext();
        }
    });



</script>